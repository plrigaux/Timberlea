{
  "name": "file-server",
  "version": "0.0.0",
  "scripts": {
    "client": "npm --prefix ./client/ start",
    "copyToServe": "cleandir server/client && copyfiles --flat --verbose dist/file-server/** server/client/",
    "build_client": "npm --prefix ./client/ run build",
    "build_server": "npm --prefix ./server/ run build",
    "copyClientFiles": "node scripts/copyClientFilesToServer.js",
    "build" : "npm run build_client && npm run build_server && npm run copyClientFiles",
    "srvDev": "npm --prefix ./server/ run timberDev",
    "timberDev": "concurrently \"npm:client\" \"npm:srvDev\"",
    "postinstall": "(cd server && npm install); (cd client && npm install)",
    "serverTest": "npm --prefix ./server/ run test -- filePathResolver"
  },
  "private": true,
  "dependencies": {
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "fs-extra": "^10.0.0"
  }
}
