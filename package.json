{
  "name": "file-server",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "copyToServe": "cleandir server/client && copyfiles --flat --verbose dist/file-server/** server/client/",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "plouf": "npm --prefix ./server/ run serve",
    "serve": "concurrently \"npm:start\" \"npm:plouf\""
  },
  "private": true,
  "dependencies": {
    "clean-dir": "^1.0.3",
    "copyfiles": "^2.4.1"
  },
  "devDependencies": {
     "@types/node": "^12.11.1",
    "concurrently": "^6.4.0",
    "typescript": "~4.4.3"
  }
}
