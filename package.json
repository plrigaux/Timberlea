{
  "name": "file-server",
  "version": "0.0.0",
  "scripts": {
    "client": "npm --prefix ./client/ start",
    "copyToServe": "cleandir server/client && copyfiles --flat --verbose dist/file-server/** server/client/",
    "build": "npm --prefix ./client/ build",
    "tscript" : "node scripts/testscript.js", 
    "server": "npm --prefix ./server/ run serve",
    "serve": "concurrently \"npm:client\" \"npm:server\""
  },
  "private": true,
  "dependencies": {
    "clean-dir": "^1.0.3",
    "copyfiles": "^2.4.1"
  },
  "devDependencies": {
     "@types/node": "^12.11.1",
    "concurrently": "^6.4.0",
    "typescript": "~4.4.3"
  }
}
